# LOCAL DEVELOPMENT ENVIRONMENT VARIABLES
# This file is for local development only and will NOT be deployed to staging or production.
# Copy this file to .env and fill in your own values for local development.
# Staging and production use Kubernetes ConfigMaps and Secrets instead.

# Django settings
DEBUG=True
SECRET_KEY=<your-secret-key-here>

# Database
# Using SQLite by default, no configuration needed

# GitHub OAuth (for django-allauth)
# Create a GitHub OAuth App at https://github.com/settings/developers
GITHUB_CLIENT_ID=<your-github-oauth-client-id>
GITHUB_SECRET=<your-github-oauth-secret>

# Challenge state: NOT_STARTED or RUNNING
CHALLENGE_STATE=RUNNING

# Evaluator settings
EVALUATOR_DOCKER_IMAGE=quay.io/yuvipanda/evaluator-harness:latest
MAX_RUNNING_EVALUATIONS=3
EVALUATOR_DOCKER_CONTAINER_CPU_LIMIT=2
EVALUATOR_DOCKER_CONTAINER_MEMORY_LIMIT=2147483648

# Podman socket
DOCKER_HOST=unix:///var/run/docker.sock
